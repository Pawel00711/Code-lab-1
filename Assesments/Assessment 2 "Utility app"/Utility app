            it->second.price = new_price;
            cout << "Price of " << it->second.name << " changed to Â£" << it->second.price << endl;
        } else {
            cout << "Extras:\n";
            int i = 1;
            for (const auto& pair : extras) cout << i++ << ". " << pair.second.name << " (Â£" << pair.second.price << ")\n";
